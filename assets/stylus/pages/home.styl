/* Home
   ========================================================================== */
.slide
	position relative
	z-index 1
	width 100%
	height 100vh
	margin-top 35px
	&__each
		position absolute
		width 100%
		height 100%
		background-size cover
		background-position center center
	&__controls
		sprite($slide_control)
		position absolute
		top 50%
		left 6%
		z-index 999
		margin-top 25px
		&--next
			left inherit
			right 6%			
			transform rotate(180deg)
	&__dots
		position absolute
		z-index 999
		bottom 40px
		left 0
		width 100%
		text-align center
		span
			width 8px
			height 8px
			display inline-block
			font-size 0
			border-radius 20px
			background-color white
			margin-right 12px
			cursor pointer
			border 2px solid transparent
			&:last-child
				margin-right 0
		.cycle-pager-active
			margin-top 2px
			background-color transparent
			border 2px solid white
.blocks
	width 100%
	padding 41px 0
	background-color white
	+above(1024px)
		padding 41px 0 109px 0
	&__one
		@extend .large-4
		@extend .small-12
		@extend .medium-12
		@extend .columns
		max-width 411px
		height 430px
		overflow hidden
		margin-bottom column_padding
		margin-left auto
		margin-right auto
		+above(1024px)
			height 230px
			margin-bottom 0
		+above(1280px)
			height auto
			&:hover
				.blocks__adesao
					top 0
					purpleOpacity
	&__group
		@extend .large-8
		@extend .medium-12
		@extend .small-12
		@extend .columns
		&__each
			@extend .large-6
			@extend .medium-6
			@extend .small-12
			@extend .columns
			max-width 411px
			margin column_padding auto
			&:nth-child(4n)
				margin-bottom 0
			+above(1024px)
				&:nth-child(3n)
					margin-bottom 0
			img
				transition all .6s ease
			&:hover
				img
					filter grayscale(1)
	&__content
		position relative
		width 100%
		height 100%
	&__adesao
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		padding 21px
		transition all .3s ease
		background-color purpleOpacity
		+above(1024px)
			background-color purple	
			top 755px	
		&__ttl
			margin-bottom 20px
			font-family 'Montserrat', sans-serif
			font-weight 900
			font-size em(12px)
			color orange
			text-align center
			text-transform uppercase
			display block
		p
			font-family 'Montserrat', sans-serif
			font-weight 900
			textPerfect(12px)			
			color white
			margin-bottom 10px
		&__btn
			@extend .btn
			margin-top 10px
	&__text
		position absolute
		top 21px
		left 30px
		width 202px
		text-align center
		h1,h2
			font-family 'Montserrat', sans-serif
			font-size em(24px)
			font-weight 400
			color gray-dark1
			text-transform uppercase
			margin-bottom 10px
		h2
			font-size em(12px)
			margin-bottom 16px
		p
			font-family 'Alegreya Sans', sans-serif
			font-size em(16px)
			line-height 20px
		.btn
			margin-top 10px
		&--bottom-center
			top inherit
			bottom 15px
			left 50%
			margin-left -101px
		&--center-right
			left 130px
			top 130px
			bottom 15px
			+above(1024px)
				left 110px
				top 80px
			+above(1280px)
				left 170px
				top 130px
.maps
	position relative
	width 100%
	height 350px	
	background-color #eee
	border-top 1px solid white-gray
	border-bottom 1px solid white-gray
	background-image url('../images/bg/mapa_default.jpg')
	&__res
		position absolute
		top 0
		width 100%
		height 350px
	&__content
		position absolute
		width 100%
		top 54px
		+above(1024px)
			top 50%
			margin-top -59px
			transition all .3s ease
		&--show
			top 10px
			margin-top 0
	&__inputs
		@extend .large-6
		@extend .medium-6
		@extend .small-10
		@extend .columns
		border 1px solid white-gray
		background-color white
		+above(1024px)
			height 118px
	&__my-local
		@extend .btn
		position relative
		float left
		width 100%		
		margin 24px 0 0 0
		padding 12px 0 12px 40px	
		line-height 13px		
		+above(1024px)
			margin 24px 0 0 11px
			padding 12px 0 12px 40px
			max-width 208px
		&:before
			sprite($location_icon)
			position absolute
			left 12px
			top 50%
			margin-top -10px
			content ""
		&:after
			position absolute
			left 39px
			top 50%
			margin-top -16px
			width 1px
			height 33px
			content ""
			background-color white-gray
	&__sep
		position relative
		width 100%
		float left
		font-family 'Montserrat', sans-serif
		font-weight 400
		font-size em(12px)		
		text-transform uppercase
		text-align center
		margin 25px 0
		+above(1024px)
			margin 0 21px
			width auto
			padding 51px 0
		&:before, &:after
			position absolute
			top -3px
			content ""
			width 1px
			height 24px
			transform rotate(90deg)
			background-color white-gray
			+above(1024px)
				left 50%
				margin-left -.5px
				transform initial
		&:before
			left 70px
			+above(1024px)
				top 21px
				left 50%
		&:after
			right 70px
			+above(1024px)
				bottom 21px
				right 0
				left 50%
				top initial
	&__cep
		position relative
		float left
		width 100%
		margin 0 0 21px 0
		+above(1024px)
			max-width 304px
			margin 21px 0 0 0
		&__label
			@extend .label
			text-align center
			+above(1024px)
				text-align left
		&__input
			@extend .input
		&__btn
			@extend .btn
			position absolute
			top 36px
			right 10px
.social
	width 100%
	padding 40px 0
	background-color white
	+above(1024px)
		padding 88px 0 100px 0
	&__newsletter
		@extend .large-4
		@extend .medium-6
		@extend .small-12
		@extend .columns
		position relative
		margin-bottom 30px
		+above(1024px)
			margin-bottom 0
		&__label
			@extend .label
		&__input
			@extend .input
			text-transform inherit
		&__btn
			@extend .btn
			position absolute
			top 35px
			right 30px
			width 86px
	&__net
		@extend .large-4
		@extend .large-offset-2
		@extend .medium-6
		@extend .small-12
		@extend .columns 
		&__ttl
			@extend .label
		&__link
			@extend .btn
			position relative
			width 49px
			height 49px
			margin-right 20px
			&:last-child
				margin-right 0
			&:before
				position absolute
				top 50%
				left 50%
				content ""
			&--facebook
				&:before
					margin -12px 0 0 -6px
					sprite($facebook_icon)
			&--youtube
				&:before
					margin -8px 0 0 -12px
					sprite($youtube_icon)
			&--instagram
				&:before
					margin -12px 0 0 -12px
					sprite($instagran_icon)